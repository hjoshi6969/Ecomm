<h1><%= count = 0 %></h1>
<h1><%= debug session[:cart] %></h1>

<div class="card">
  <div class="card-body">
    <% @products.each do |product| %>
      <div class="row">
        <div class="col-6">
          <h5 class="card-title"><%= product.name %></h5>
          <p class="card-text">Quantity: <%= %></p>
          <p class="card-text">Price: <%= number_to_currency(product.price) %></p>
        </div>
        <div class="col-3">  
            <a class=" btn btn-danger" href="/Products/cartRemove?product_id=<%= product.id %>" >Remove Item</a>
        </div>
      </div>
      <hr>
    <% end %>
  </div>
</div>
